<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorBgOppos</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="NumbePickerStyle">
        <item name="android:textSize">22dp</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
    </style>

    <style name="textbox">
        <item name="android:padding">20px</item>
        <item name="android:textSize">18sp</item>
        <item name="android:width">250dp</item>
        <item name="android:background">@color/colorBgOppos</item>

    </style>

    <style name="labelinfo">
        <item name="android:color">@color/colorBgOppos</item>
        <item name="android:textSize">10sp</item>
    </style>


    <style name="Button">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">20px</item>

    </style>
</resources>
